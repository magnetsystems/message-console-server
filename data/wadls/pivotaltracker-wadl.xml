    <!-- Pivotal Tracker API v3 -->
    <resources base="https://www.pivotaltracker.com/services/v3/">

        <!-- User Token -->

        <resource path="tokens/active">
            <method id="get_tokens_active" name="GET" apigee:displayName="tokens/active (GET)">
                <apigee:tags>
                    <apigee:tag primary="true">User Token</apigee:tag>
                </apigee:tags>

                <apigee:authentication required="true"/>

                <apigee:example url="tokens/active"/>

                <doc title="Retrieve User Token (via Basic Auth)" apigee:url="https://www.pivotaltracker.com/help/api?version=v3#retrieve_token_basic_auth">
                    <![CDATA[Returns an API token associated with the user. This method requires HTTP Basic authentication.]]>
                </doc>

                <response>
                    <representation mediaType="application/xml"/>
                </response>
            </method>
        </resource>

        <resource path="tokens/active">
            <method id="post_tokens_active" name="POST" apigee:displayName="tokens/active (POST)">
                <apigee:tags>
                    <apigee:tag primary="true">User Token</apigee:tag>
                </apigee:tags>

                <apigee:authentication required="false"/>

                <apigee:example url="tokens/active"/>

                <doc title="Retrieve User Token (via POST)" apigee:url="https://www.pivotaltracker.com/help/api?version=v3#retrieve_token_post">
                    <![CDATA[Returns an API token associated with the user.]]>
                </doc>

                <request>
                    <param name="username" type="xsd:string" style="query" required="true">
                        <doc apigee:url="https://www.pivotaltracker.com/help/api?version=v3#retrieve_token_post">
                            <![CDATA[The user's name.]]>
                        </doc>
                    </param>

                    <param name="password" type="xsd:string" style="query" required="true">
                        <doc apigee:url="https://www.pivotaltracker.com/help/api?version=v3#retrieve_token_post">
                            <![CDATA[The user's password.]]>
                        </doc>
                    </param>
                </request>

                <response>
                    <representation mediaType="application/xml"/>
                </response>
            </method>
        </resource>

        <!-- Activity Feed -->

        <resource path="activities">
            <method id="get_activities" name="GET" apigee:displayName="activities">
                <apigee:tags>
                    <apigee:tag primary="true">Activity Feed</apigee:tag>
                </apigee:tags>

                <apigee:authentication required="true"/>

                <apigee:example url="activities"/>

                <doc title="All activity" apigee:url="https://www.pivotaltracker.com/help/api?version=v3#get_all_activity">
                    <![CDATA[Retrieves the recent activity of all your projects.]]>
                </doc>

                <request>
                    <param name="limit" type="xsd:positiveInteger" style="query" required="false" default="10">
                        <doc apigee:url="https://www.pivotaltracker.com/help/api?version=v3#get_all_activity">
                            <![CDATA[Limits the number of activity feed items. Note the default value is 10, and there is a upper cap of 100]]>
                        </doc>
                    </param>

                    <param name="occurred_since_date" type="xsd:string" style="query" required="false">
                        <doc apigee:url="https://www.pivotaltracker.com/help/api?version=v3#get_all_activity">
                            <![CDATA[Restricts the activity feed to only those items that occurred after a supplied date (example format: 2009/12/18 21:00:00 UTC)]]>
                        </doc>
                    </param>

                    <param name="newer_than_version" type="xsd:string" style="query" required="false">
                        <doc apigee:url="https://www.pivotaltracker.com/help/api?version=v3#get_all_activity">
                            <![CDATA[Restricts the activity feed to only those items that have a greater than supplied version]]>
                        </doc>
                    </param>
                </request>

                <response>
                    <representation mediaType="application/xml"/>
                </response>
            </method>
        </resource>

