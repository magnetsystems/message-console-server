<div id="login-container" class="page">
    <form action="/login" method="post" name="login">
        <div class="page-view valign">

            <div class="row-fluid">
                <div class="col50">
                    <h4>Sign In</h4>
                    <p class="subheading">
                        You must Sign In to access the Developer Factory.
                    </p>
                    <div class="modal_errors" style="display:none">
                        <div class="alert alert-error">
                            <strong></strong><br /><span></span>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <input type="text" class="span8" name="username" id="username" placeholder="Email Address*">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <input type="password" class="span8" name="password" id="password" placeholder="Password*">
                        </div>
                    </div>
                    <button type="submit" id="btn-login" class="btn btn-primary">Sign in<i class="icon-lock icon-white"></i></button>
                    <div class="login-footer">
                        <a href="#" class="preauth-btns" did="start-reset-password">Forgot Password?</a>
                    </div>
                </div>
                <div class="col50 second">
                    <h4>Don't have an account?</h4>
                    <p class="subheading">
                        Request an invitation to start developing now!
                    </p>
                    <div class="dev-teaser clearfix">
                        <div>
                            <img src="/images/sign_in_img.png" style="width:100%" />
                        </div>
                        <ul>
                            <li>Quickly build apps</li>
                            <li>iOS&trade; and Android &trade; platforms</li>
                            <li>Use your own web services</li>
                            <li>User pre-defined 3rd party web services</li>
                            <li>Deploy your project to the cloud</li>
                        </ul>
                    </div>
                    <div class="login-footer clearfix">
                        <a class="btn btn-primary pull-left preauth-btns" did="invitation" href="#">Request Invitation</a>
                        <a href="/learn-more/" class="textlink">More Information >></a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
<div id="invitation-container" class="page" style="display:none">
    <div class="page-view valign">
		<h4>Request for Invitation</h4>
		<p class="subheading">
			To get invited, fill out the fields below. An administrator will review your application and contact you through email.
		</p>
        <div class="form-horizontal">
          <div class="modal_errors" style="display:none">
              <div class="alert alert-error">
                <strong></strong> <span></span>
              </div>
          </div>
          <div class="row-fluid">
            <div class="span6">
                <input type="text" class="span12" name="firstName" placeholder="First Name*">
            </div>
            <div class="span6">
                <input type="text" class="span12" name="lastName" placeholder="Last Name*">
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
                <input type="text" class="span12" name="email" placeholder="Email Address*">
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
                <input type="text" class="span12" name="companyName" placeholder="Company Name*">
            </div>
          </div>
           {{ if(typeof captcha != 'undefined' && captcha === true){ }}
            <div class="row-fluid">
                <div class="span12">
                    <label>Spam Protection</label>
                    <script type="text/javascript" src="https://www.google.com/recaptcha/api/challenge?k=6LcVfO8SAAAAAD1haiOFt2ZXQHDW-OpS5WiCT64Q"></script>
                    <noscript>
                        <iframe src="https://www.google.com/recaptcha/api/noscript?k=6LcVfO8SAAAAAD1haiOFt2ZXQHDW-OpS5WiCT64Q" height="300" width="500" frameborder="0"></iframe><br>
                        <textarea name="recaptcha_challenge_field" rows="3" cols="40"> </textarea>
                        <input type="hidden" name="recaptcha_response_field" value="manual_challenge">
                    </noscript>
                </div>
            </div>
            {{ } }}
        </div>
        <div class="modal-footer">
            <button type="button" id="btn-request-invitation" class="btn btn-primary">Send Request</button>
            <a href="#" class="preauth-btns" did="login"><button type="button" class="btn">Return to Login</button></a>
        </div>
        <div class="loading modal-footer" style="display:none">
            Loading.. Please Wait.. <img src="../images/ajax-loader-sm.gif" />
        </div>
    </div>
</div>

