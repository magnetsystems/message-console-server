<div id="confirm-registration-container" class="page" style="display:none">
    <div class="page-view valign">
		<h4>Complete Your Registration</h4>
		<p class="subheading">
			Fill out the form below to complete your registration.
		</p>
        <div class="form-horizontal">
          <div class="modal_errors" style="display:none">
              <div class="alert alert-error">
                <strong></strong> <span></span>
              </div>
          </div>
          <div class="optional row-fluid">
            <div class="span6">
                <input type="text" class="span12" name="firstName" placeholder="First Name*">
            </div>
            <div class="span6">
                <input type="text" class="span12" name="lastName" placeholder="Last Name*">
            </div>
          </div>
          <span id="confirm-registration-email"></span>
          <div class="optional row-fluid">
            <div class="span12">
                <input type="text" class="span12" name="companyName" placeholder="Company Name*">
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
                <select class="span12" name="roleWithinCompany" placeholder="Role at your company">
                    <option value="">Role at your company</option>
                    <option value="server-developer">Server Developer</option>
                    <option value="client-developer">Client Developer</option>
                    <option value="it-admin">IT Admin</option>
                    <option value="management">Management</option>
                </select>
            </div>
          </div>
            <div class="row-fluid">
                <div class="span12">
                    <select class="span12" name="country" placeholder="Country">
                        {{ for(var i=0;i<countries.length;++i){ }}
                        <option value="{{=countries[i].short}}">{{=countries[i].name}}</option>
                        {{ } }}
                    </select>
                </div>
            </div>
          <div class="row-fluid">
            <div class="span6">
                <input type="password" class="span12" name="password" placeholder="Password*">
            </div>
            <div class="span6">
                <input type="password" class="span12" name="password2" placeholder="Re-type Password*">
            </div>
          </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="btn-complete-registration" class="btn btn-primary">Register</button>
            <a href="#" class="preauth-btns" did="login"><button type="button" class="btn">Return to Login</button></a>
        </div>
        <div class="loading modal-footer" style="display:none">
            Loading.. Please Wait.. <img src="../images/ajax-loader-sm.gif" />
        </div>
    </div>
</div>

