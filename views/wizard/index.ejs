<script id="WizardSeedAdminTmpl" type="text/template">
    <% if(typeof active !== 'undefined'){ %>
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>All Ready!</strong> An admin user has been created.
    </div>
    <% }else{ %>
    <form id="wizard-admin-form" role="form" class="clearfix">
        <span class="alert-container"></span>
        <div class="form-group">
            <div class="col-md-12">
                <label>Email Address</label>
                <input type="text" class="form-control" name="email" placeholder="Enter the email you would like to use for your admin" value="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Password</label>
                <div class="toggling-password-input">
                    <span class="glyphicon glyphicon-eye-close hidden" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to hide the password value."></span>
                    <span class="glyphicon glyphicon-eye-open" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to display the password value."></span>
                    <input type="password" class="form-control toggling-password-input" name="password" placeholder="Enter your password" value="" />
                </div>
            </div>
            <div class="col-md-6">
                <label>Password (repeat)</label>
                <div class="toggling-password-input">
                    <span class="glyphicon glyphicon-eye-close hidden" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to hide the password value."></span>
                    <span class="glyphicon glyphicon-eye-open" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to display the password value."></span>
                    <input type="password" class="form-control  toggling-password-input" name="passwordVerify" placeholder="Re-enter your password" value="" />
                </div>
            </div>
            <div class="col-md-12">
                <span class="colortext colortext-info">To protect your security, use a password with 10 or more characters, with at least one uppercase letter, lowercase letter, and number.</span>
            </div>
        </div>
    </form>
    <% } %>
</script>

<script id="WizardMessagingTmpl" type="text/template">
    <% if(typeof active !== 'undefined'){ %>
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>All Ready!</strong> Your Magnet Message configuration has been completed.
    </div>
    <% }else{ %>
    <form id="wizard-messaging-form" role="form" class="clearfix">
        <span class="alert-container"></span>
        <div class="form-group clearfix">
            <div class="col-sm-4">
                <label>Internal Hostname</label>
                <input type="text" class="form-control" name="host" placeholder="Internal Hostname" value="<%- host %>" />
            </div>
            <div class="col-md-4">
                <label>Messaging Username</label>
                <input type="text" class="form-control" name="user" placeholder="Username" value="<%- user %>" />
            </div>
            <div class="col-md-4">
                <label>Messaging Password</label>
                <div class="toggling-password-input">
                    <span class="glyphicon glyphicon-eye-close hidden" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to hide the password value."></span>
                    <span class="glyphicon glyphicon-eye-open" title="" data-placement="top" data-toggle="tooltip" data-title="Click the eye to display the password value."></span>
                    <input type="password" class="form-control toggling-password-input" name="password" placeholder="Password" value="<%- password %>" />
                </div>
            </div>
        </div>
        <div class="panel-group clearfix" id="wizard-messaging-advanced-config">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#wizard-messaging-advanced-config" href="#wizard-messaging-db-config-item">
                            Advanced Configuration
                        </a>
                    </h4>
                </div>
                <div id="wizard-messaging-db-config-item" class="panel-collapse collapse">
                    <div class="panel-body">
                        <p>
                            <b>Database configuration</b><br />
                            By default, the messaging server will share the same database as the Administrator Console.</p>
                        <div class="form-group clearfix">
                            <div class="col-sm-4">
                                <div class="btn-group btn-toggle" did="shareDB">
                                    <button class="btn btn-sm btn-primary active" did="true" type="button">ON</button>
                                    <button class="btn btn-sm btn-default" did="false" type="button">OFF</button>
                                </div>
                                <label class="aligned">Share Database
                                    <span class="glyphicon glyphicon-info-sign" title="" data-placement="top" data-toggle="tooltip" data-title="Turn off Share Database to configure a different database."></span>
                                </label>
                            </div>
                        </div>
                        <div id="wizard-messaging-database-config" class="hidden">
                            <div class="form-group clearfix">
                                <div class="col-sm-6">
                                    <label>Username</label>
                                    <input type="text" name="mysqlUser" class="form-control" placeholder="Username" value="<%- mysqlUser %>" />
                                </div>
                                <div class="col-sm-6">
                                    <label>Password</label>
                                    <input type="password" name="mysqlPassword" class="form-control" placeholder="Password" value="<%- mysqlPassword %>" />
                                </div>
                                <div class="col-sm-4">
                                    <label>Hostname</label>
                                    <input type="text" name="mysqlHost" class="form-control" placeholder="Hostname" value="<%- mysqlHost %>" />
                                </div>
                                <div class="col-sm-4">
                                    <label>Port</label>
                                    <input type="text" name="mysqlPort" class="form-control" placeholder="Port" value="<%- mysqlPort %>" />
                                </div>
                                <div class="col-sm-4">
                                    <label>Database Name</label>
                                    <input type="text" name="mysqlDb" class="form-control" placeholder="Database Name" value="<%- mysqlDb %>" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
    <% } %>
</script>
